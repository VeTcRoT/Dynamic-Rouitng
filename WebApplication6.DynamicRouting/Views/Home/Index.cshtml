@using WebApplication6.DynamicRouting.ViewModels;
@model List<RootFolder>
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1 class="display-4">Welcome</h1>
    <p>Available folders:</p>
    <ul>
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                    <li><a href="/@item.FullPath">@item.FolderName</a></li>
            }
        }
        else
        {
            <li>No folders available!</li>
        }
    </ul>
</div>